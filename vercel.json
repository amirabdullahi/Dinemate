{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "backend/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/",
      "dest": "frontend/public/index.html"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "frontend/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/public/$1.html"
    }
  ]
}